{
  "name": "activity-collector-mcp",
  "version": "1.0.1",
  "description": "MCP server for collecting activity data from GitLab, GitHub, and Calendar services",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "activity-collector-mcp": "build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "npm run build && node build/index.js",
