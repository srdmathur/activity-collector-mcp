    "mcp",
    "model-context-protocol",
    "timesheet",
    "gitlab",
    "github",
    "google-calendar",
    "outlook-calendar",
    "activity-tracker",
    "automation",
    "developer-tools"
  ],
  "author": "Sharad Mathur <srdmathur@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/srdmathur/activity-collector-mcp.git"
  },
  "homepage": "https://github.com/srdmathur/activity-collector-mcp#readme",
  "bugs": {
    "url": "https://github.com/srdmathur/activity-collector-mcp/issues"
  },
  "dependencies": {
    "@gitbeaker/rest": "^41.0.1",
    "@octokit/rest": "^22.0.1",
    "@azure/msal-node": "^2.15.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "date-fns": "^4.1.0",
    "googleapis": "^144.0.0",
    "keytar": "^7.9.0"
